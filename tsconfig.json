{
  "compilerOptions": {
    "target": "es2016",            /* Versão do JavaScript gerado */
    "module": "commonjs",          /* Padrão de módulos do Node.js */
    "rootDir": "./src",            /* Onde está seu código TypeScript */
    "outDir": "./dist",            /* Onde o código compilado será salvo */
    "strict": true,                /* Ativa verificações rigorosas (segurança) */
    "esModuleInterop": true,       /* Permite importar módulos CommonJS */
    "skipLibCheck": true,          /* Acelera a compilação */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}